---
layout: 'base.njk'
---

<article class="main-article">
<div class="container container--narrow flow">
  
    <h1 class="article-title">
      {{ title }}
    </h1>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt }}
      </figcaption>
    </figure>
    
    {{ content | safe }}

{# the working non-video stuff is in your notes #}
    {%- for imager in images -%}
      {%set imgP = imager.src %}
      {%set imgP2 = imager.src2 %}
      {% if imager.video-content %} 
        hello video
        {# {{imager.pSrc}} #}
        <video poster="{{imager.pSrc}}" playsinline="" loop="loop" autoplay="autoplay" muted="muted">
          <source src="{{ imgP }}">
        </video>
      {% else %}
        {# hello image #}
        {%set imgA = imager.alt %}
        {% Image ""+imgP, ""+imgA  %}
      {% endif %}

    {%- endfor -%}

</div>
</article>
