---
layout: 'base.njk'
---

<article class="main-article">
<div class="container container--narrow flow">
  
    <h1 class="article-title">
      {{ title }}
    </h1>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt }}
      </figcaption>
    </figure>
    
    {{ content | safe }}

    {%- for imager in images -%}
        {%set imgP = imager.src %}
        {%set imgA = imager.alt %}
        {% Image ""+imgP, ""+imgA  %}
    {%- endfor -%}

</div>
</article>
